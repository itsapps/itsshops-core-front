<footer class="wrapper footer">
  <div class="footer--grid">
    <div class="footer--block">
      <p class="h3">{{ 'footer.contact' | t }}</p>
      <a href="mailto:{{ cms.getSiteSettings(locale).companyEmail }}">{{ cms.getSiteSettings(locale).companyEmail }}</a>
    </div>
    <div class="footer--block">
      <p class="h3">Shop</p>
      <ul role="list">
      {%- for c in cms.categoryTree %}
      {% set category = cms.getCategory(c._id, locale) %}
        <li>
          <a href="{{ category.permalink }}" {{ helpers.getLinkActiveState(category.permalink, page.url) | safe }}>
            {{ category.title }}
          </a>
        </li>
      {% endfor %}
      </ul>
    </div>

    {% for menuId in cms.getSiteSettings(locale).footerMenuIds %}
    {% set menu = cms.getMenu(menuId, locale) %}
    <div class="footer--block">
      <p class="h3">{{ menu.title }}</p>
      <ul role="list">
      {% for item in menu.items %}
        <li>
          <a href="{{ item.url }}" {{helpers.getLinkActiveState(item.url, page.url) | safe }}>
            {{ item.title }}
          </a>
        </li>
      {% endfor %}
      </ul>
    </div>
    {% endfor %}
    
    <div class="footer--block">
      <p class="h3">Get Social</p>
      <div class="footer--menu-social">
        {% for item in cms.getSocialLinks(locale) %}
          <a class="footer--menu-social-link" aria-label="{{ item.name }}" href="{{ item.url }}" target="_blank" rel="noopener noreferrer">
            {% include item.icon %}
          </a>  
        {% endfor %}
      </div>
      <div class="footer--extras">
        <button
          type="button"
          id="theme-toggle"
          class="theme-toggle"
          aria-label="auto"
          aria-live="polite"
        >
          {% include "icons/sun-moon.svg" %}
        </button>
        <button
          type="button"
          id="edit-cookies-button"
          class="btn is-text"
          title="{{ 'cookies.editButton' | t }}"
        >
          {{ 'cookies.editButton' | t }}
        </button>
        Â© {% year %}
      </div>
    </div>
  </div>
</footer>
